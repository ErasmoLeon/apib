all:
	cd src && $(MAKE) all

clean:
	cd src && $(MAKE) clean

test:
	cd src && $(MAKE) test

package:
	mkdir tmp
	mkdir tmp/apib
	cp apib apibmon tmp/apib
	cd tmp; tar -cvf ../../apib.tar .
	rm -rf tmp

package-src:
	tar --exclude=.hg -cvf ../apib-src.tar .
